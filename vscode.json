{
    "editor.mouseWheelZoom": true,
    "editor.minimap.enabled": false,
    "editor.suggestSelection": "first",
    "editor.fontSize": 22,
    "editor.fontLigatures": true,
    "editor.lineNumbers": "relative",

    "debug.console.fontSize": 18,
    "debug.onTaskErrors": "showErrors",
    "debug.console.fontFamily": "Source Code Pro",
    "[c]": {
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },

    "vim.vimrc.enable": true,
    "vim.vimrc.path": "$HOME/下载/Vimrc/.vimrc",
    "vim.camelCaseMotion.enable": true,
    "vim.easymotion": true,
    "vim.sneak": true,
    "vim.sneakReplacesF": true,

    "vim.insertModeKeyBindings": [
    {
        "before": ["j", "k"],
        "after": ["<Esc>"]
    }
    ],

    "workbench.startupEditor": "none",
    "workbench.editor.pinnedTabSizing": "compact",
    "workbench.iconTheme": "vscode-icons",
    "workbench.colorTheme": "Solarized Dark",
    "workbench.colorCustomizations": {
        "statusBar.background": "#107c34",
        "statusBar.noFolderBackground": "#10b92c",
        "statusBar.debuggingBackground": "#3ca70a",
        "statusBar.foreground": "#4c098b"
    },


    "[jsonc]": {
        "editor.quickSuggestions": {
            "strings": true
        },
        "editor.suggest.insertMode": "replace"
    },

    "window.dialogStyle": "custom",
    "http.proxySupport": "off",
    "git.enabled": false,
    "markdown.extension.toc.slugifyMode": "vscode",
    "markdown-preview-enhanced.previewTheme": "solarized-dark.css",
    "markdown-preview-enhanced.printBackground": true,
    "explorer.confirmDelete": false,
    "files.autoSave": "afterDelay",
    "terminal.integrated.fontFamily": "Source Code Pro",
    "window.titleBarStyle": "custom",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "update.mode": "none",
    "update.showReleaseNotes": false,
}
