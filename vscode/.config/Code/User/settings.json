{
    "editor.fontLigatures": true,
    "editor.suggest.preview": true,
    "editor.fontFamily": "Fira Code",
    "terminal.integrated.fontFamily": "Fira Code",
    "editor.fontSize": 16,
    "debug.console.fontFamily": "Fira Code",
    "vim.vimrc.enable": true,
    "vim.vimrc.path": "~/.ideavimrc",
    "vim.camelCaseMotion.enable": true,
    "vim.easymotion": false,
    "vim.sneak": false,
    "vim.sneakReplacesF": false,
    "vim.useSystemClipboard": true,
    "workbench.colorTheme": "One Dark Pro",
    "workbench.startupEditor": "none",
    "workbench.editor.pinnedTabSizing": "compact",
    "workbench.iconTheme": "vscode-icons",
    "workbench.colorCustomizations": {
        "statusBar.background": "#282c34",
        "statusBar.noFolderBackground": "#0c0d0fa6",
        "statusBar.debuggingBackground": "#16091b6b",
        "statusBar.foreground": "#8a968afa"
    },
    "[jsonc]": {
        "editor.quickSuggestions": {
            "strings": true
        },
        "editor.suggest.insertMode": "replace"
    },
    "window.dialogStyle": "custom",
    "git.enabled": true,
    "explorer.confirmDelete": false,
    "files.autoSave": "afterDelay",
    "window.titleBarStyle": "custom",
    "update.mode": "manual",
    "update.showReleaseNotes": false,
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.defaultProfile.linux": "zsh",
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "json.trace.server": "verbose",
    "editor.tabSize": 4,
    "editor.cursorStyle": "line",
    "editor.insertSpaces": false,
    "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
    "editor.wordWrap": "off",
    "grunt.autoDetect": "on",
    "editor.mouseWheelZoom": true,
    "editor.minimap.enabled": true,
    "editor.suggestSelection": "first",
    "editor.lineNumbers": "on",
    "debug.console.fontSize": 18,
    "debug.onTaskErrors": "showErrors",
    "editor.renderWhitespace": "none",
    "workbench.sideBar.location": "right",
    "C_Cpp.intelliSenseEngine": "Default",
    "files.trimTrailingWhitespace": true,
    "git.enableSmartCommit": true,
    "window.menuBarVisibility": "compact",
    "terminal.external.linuxExec": "kitty",
    "window.zoomLevel": 0.5,
    "debug.terminal.clearBeforeReusing": true,
    "terminal.integrated.copyOnSelection": true,
    "editor.snippetSuggestions": "top",
    "editor.inlineSuggest.enabled": true,
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": "active",
    "github.copilot.enable": {
        "*": true,
        "yaml": false,
        "plaintext": true,
        "markdown": false
    },
    "workbench.editor.untitled.hint": "text",
    "vsicons.dontShowNewVersionMessage": true,
    "editor.unicodeHighlight.invisibleCharacters": true,
    "editor.unicodeHighlight.ambiguousCharacters": true,
}