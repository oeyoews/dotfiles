{
    // ***** font *****
    "editor.fontFamily": "'Droid Sans Mono'",
    "terminal.integrated.fontFamily": "Droid Sans Mono",
    "editor.fontSize": 22,
    "editor.fontLigatures": true,
    "debug.console.fontFamily": "Droid Sans Mono",
    // ***** vim *****
    "vim.vimrc.enable": true,
    "vim.vimrc.path": "~/.ideavimrc",
    "vim.camelCaseMotion.enable": true,
    "vim.easymotion": true,
    "vim.sneak": true,
    "vim.sneakReplacesF": true,
    "vim.useSystemClipboard": true,
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<space>"
            ],
            "commands": [
                "vspacecode.space"
            ]
        },
        {
            "before": [
                ","
            ],
            "commands": [
                "vspacecode.space",
                {
                    "command": "whichkey.triggerKey",
                    "args": "m"
                }
            ]
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<space>"
            ],
            "commands": [
                "vspacecode.space"
            ]
        },
        {
            "before": [
                ","
            ],
            "commands": [
                "vspacecode.space",
                {
                    "command": "whichkey.triggerKey",
                    "args": "m"
                }
            ]
        }
    ],
    // ***** workbench *****
    "workbench.colorTheme": "One Dark Pro",
    "workbench.startupEditor": "none",
    "workbench.editor.pinnedTabSizing": "compact",
    "workbench.iconTheme": "vscode-icons",
    "workbench.colorCustomizations": {
        "statusBar.background": "#282c34",
        "statusBar.noFolderBackground": "#0c0d0fa6",
        "statusBar.debuggingBackground": "#16091b6b",
        "statusBar.foreground": "#8a968afa"
    },
    // *** misc ***
    "[jsonc]": {
        "editor.quickSuggestions": {
            "strings": true
        },
        "editor.suggest.insertMode": "replace"
    },
    "window.dialogStyle": "custom",
    "http.proxySupport": "off",
    "git.enabled": true,
    "explorer.confirmDelete": false,
    "files.autoSave": "afterDelay",
    "window.titleBarStyle": "custom",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "update.mode": "manual",
    "update.showReleaseNotes": false,
    "terminal.integrated.fontSize": 18,
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "json.trace.server": "verbose",
    "editor.tabSize": 4,
    "editor.cursorStyle": "line",
    "editor.insertSpaces": false,
    "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
    "editor.wordWrap": "off",
    "terminal.integrated.defaultProfile.linux": "bash",
    "grunt.autoDetect": "on",
    "editor.mouseWheelZoom": true,
    "editor.minimap.enabled":true,
    "editor.suggestSelection": "first",
    "editor.lineNumbers": "relative",
    "debug.console.fontSize": 18,
    "debug.onTaskErrors": "showErrors",
    "window.zoomLevel": 1,
    "editor.renderWhitespace": "none",
    "workbench.sideBar.location": "right",
    "C_Cpp.intelliSenseEngine": "Default",
    "files.trimTrailingWhitespace": true,
    "tabnine.experimentalAutoImports": true,
    "dashboard.projectData": null,
    "todo-tree.general.tags": [
        "BUG",
        "HACK",
        "FIXME",
        "TODO",
        "XXX",
        "[ ]",
        "[x]"
    ],
    "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",
    "git.enableSmartCommit": true,
}