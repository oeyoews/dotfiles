{
    "editor.mouseWheelZoom": true,
    "editor.minimap.enabled": false,
    "editor.suggestSelection": "first",
    "editor.fontSize": 22,
    "editor.fontLigatures": true,
    "editor.lineNumbers": "on",

    "debug.console.fontSize": 18,
    "debug.onTaskErrors": "showErrors",
    "debug.console.fontFamily": "Source Code Variable",
    "[c]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },

    "vim.vimrc.enable": true,
    "vim.vimrc.path": "$HOME/.ideavimrc",
    "vim.camelCaseMotion.enable": true,
    "vim.easymotion": true,
    "vim.sneak": true,
    "vim.sneakReplacesF": true,
    "vim.useSystemClipboard": true,
    "vim.insertModeKeyBindings": [
    {
        "before": ["j", "k"],
        "after": ["<Esc>"]
    }
    ],
    
    "workbench.colorTheme": "One Dark Pro",
    "workbench.startupEditor": "none",
    "workbench.editor.pinnedTabSizing": "compact",
    "workbench.iconTheme": "vscode-icons",
    "workbench.colorCustomizations": {
        "statusBar.background": "#1a1d1db0",
        "statusBar.noFolderBackground": "#0c0d0fa6",
        "statusBar.debuggingBackground": "#16091b6b",
        "statusBar.foreground": "#fcfdfbfa"
    },

    "[jsonc]": {
        "editor.quickSuggestions": {
            "strings": true
        },
        "editor.suggest.insertMode": "replace"
    },

    "window.dialogStyle": "custom",
    "http.proxySupport": "off",
    "git.enabled": false,
    "explorer.confirmDelete": false,
    "files.autoSave": "afterDelay",
    "terminal.integrated.fontFamily": "Source Code Variable",
    "window.titleBarStyle": "custom",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "update.mode": "none",
    "update.showReleaseNotes": false,
    "terminal.integrated.fontSize": 18,
    "cSpell.userWords": [
        "oeyoews"
    ],
    
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "json.trace.server": "verbose",
    "editor.defaultFormatter": "xaver.clang-format",
    "markdown-preview-enhanced.previewTheme": "atom-dark.css",
    "editor.tabSize": 4,
    "editor.cursorStyle": "line",
    "editor.insertSpaces": false,
    "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
    "editor.wordWrap": "on",
    "terminal.integrated.defaultProfile.linux": "zsh",
    "editor.fontFamily": "'Droid Sans Mono'",
    //  'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
}
