let mapleader=" "
" == opts
set nu
set so=5
set signcolumn=yes
set ve=block
set cursorline
set incsearch " always highlight search keywords

" == misc
syntax on

" == mappings
inoremap jk <ESC>
nnoremap <leader>w <C-W>
nnoremap <leader><leader> :
nnoremap <space>qq :q<cr>
nnoremap <space>ss /
nnoremap <space>fs :w<cr>
nnoremap <space>bd <cmd>bd<cr>
noremap L $

set NERDTree
nnoremap <leader>ll <cmd><S><F10><cr>
nnoremap <leader>ft :NERDTreeFocus<cr>
set highlightedyank
set surround
map <leader>ld <Action>(Debug)
map <leader>ll <Action>(Run)
map <leader>lr <Action>(RenameElement)
map <leader>z <Action>(ToggleDistractionFreeMode)
map <leader>h <Action>(Vcs.ShowTabbedFileHistory)
map <leader>lb <Action>(ToggleLineBreakpoint)

map <leader><Tab> <cmd>bp<cr>
map <leader>bn <cmd>bn<cr>

sethandler <C-A> a:ide
sethandler <C-C> a:ide
sethandler <C-F> a:ide
sethandler <C-G> a:vim
sethandler <C-N> a:vim
sethandler <C-P> a:vim
sethandler <C-O> a:ide
sethandler <C-Q> a:ide
sethandler <C-R> a:vim
sethandler <C-S> a:ide
sethandler <C-V> a:vim
sethandler <C-W> a:ide
sethandler <C-X> a:vim
sethandler <C-Y> a:ide

sethandler <C-B> a:ide
sethandler <C-H> a:ide
sethandler <C-I> a:ide
sethandler <C-K> a:vim
sethandler <C-T> a:vim