{
    "editor.mouseWheelZoom": true,
    "editor.minimap.enabled": false,
    "editor.suggestSelection": "first",
    "editor.fontSize": 22,
    "editor.fontLigatures": true,
    "editor.lineNumbers": "on",

    "debug.console.fontSize": 18,
    "debug.onTaskErrors": "showErrors",
    "debug.console.fontFamily": "Source Code Pro",
    "[c]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },

    "vim.vimrc.enable": true,
    "vim.vimrc.path": "$HOME/Download/Vimrc/.vimrc",
    "vim.camelCaseMotion.enable": true,
    "vim.easymotion": true,
    "vim.sneak": true,
    "vim.sneakReplacesF": true,
    "vim.useSystemClipboard": true,
    "vim.insertModeKeyBindings": [
    {
        "before": ["j", "k"],
        "after": ["<Esc>"]
    }
    ],
    
    "workbench.colorTheme": "One Dark Pro",
    "workbench.startupEditor": "none",
    "workbench.editor.pinnedTabSizing": "compact",
    "workbench.iconTheme": "vscode-icons",
    "workbench.colorCustomizations": {
        "statusBar.background": "#8be960da",
        "statusBar.noFolderBackground": "#37d459",
        "statusBar.debuggingBackground": "#c57519",
        "statusBar.foreground": "#00040fd7"
    },

    "[jsonc]": {
        "editor.quickSuggestions": {
            "strings": true
        },
        "editor.suggest.insertMode": "replace"
    },

    "window.dialogStyle": "custom",
    "http.proxySupport": "off",
    "git.enabled": false,
    "explorer.confirmDelete": false,
    "files.autoSave": "afterDelay",
    "terminal.integrated.fontFamily": "Source Code Pro Semibold",
    "window.titleBarStyle": "custom",
